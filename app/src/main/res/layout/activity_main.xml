<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="35dp"
            android:shadowColor="#CD000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="7.5"
            android:text="Defeat The Enemies!"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.02" />

        <LinearLayout
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="top|center"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="#CD000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="10"
                android:text="Player"
                android:textColor="#FFC800"
                android:textSize="24sp"
                android:textStyle="bold" />

            <FrameLayout
                android:layout_width="358dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:foregroundGravity="center">

                <View
                    android:layout_gravity="center"
                    android:elevation="1dp"
                    android:layout_width="354dp"
                    android:layout_height="26dp"
                    android:foreground="@drawable/round_shape"
                    android:foregroundTint="@color/color1gray"/>

                <View
                    android:id="@+id/p1hpBar"
                    android:layout_gravity="center"
                    android:layout_width="355dp"
                    android:layout_height="24dp"
                    android:elevation="2dp"
                    android:foreground="@drawable/round_shape"
                    android:foregroundTint="@color/color2green"
                    android:scaleX="0.9825"
                    android:scaleY="0.875"/>

                <TextView
                    android:id="@+id/p1hpText"
                    android:layout_width="350dp"
                    android:layout_height="23dp"
                    android:elevation="3dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/playerHp"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </FrameLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="#CD000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="10"
                android:text="Enemy 1"
                android:textColor="#FF0000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <FrameLayout
                android:layout_width="358dp"
                android:layout_height="39dp"
                android:layout_gravity="center"
                android:foregroundGravity="center">

                <View
                    android:layout_gravity="center"
                    android:elevation="1dp"
                    android:layout_width="354dp"
                    android:layout_height="26dp"
                    android:foreground="@drawable/round_shape"
                    android:foregroundTint="@color/color1gray"/>

                <View
                    android:id="@+id/e1hpBar"
                    android:layout_gravity="center"
                    android:layout_width="355dp"
                    android:layout_height="24dp"
                    android:elevation="2dp"
                    android:foreground="@drawable/round_shape"
                    android:foregroundTint="@color/color2green"
                    android:scaleX="0.9825"
                    android:scaleY="0.875"/>

                <TextView
                    android:id="@+id/e1hpText"
                    android:layout_width="350dp"
                    android:layout_height="23dp"
                    android:elevation="3dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/enemy1Hp"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </FrameLayout>


            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="#CD000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="10"
                android:text="Enemy 2"
                android:textColor="#FF0000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <FrameLayout
                android:layout_width="353dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                android:foregroundGravity="center">

                <View
                    android:layout_width="354dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center"
                    android:background="@color/transparent"
                    android:backgroundTintMode="multiply"
                    android:elevation="1dp"
                    android:foreground="@drawable/round_shape"
                    android:foregroundTint="@color/color1gray" />

                <View
                    android:id="@+id/e2hpBar"
                    android:layout_gravity="center"
                    android:layout_width="355dp"
                    android:layout_height="24dp"
                    android:elevation="2dp"
                    android:foreground="@drawable/round_shape"
                    android:foregroundTint="@color/color2green"
                    android:scaleX="0.9825"
                    android:scaleY="0.875"/>

                <TextView
                    android:id="@+id/e2hpText"
                    android:layout_width="350dp"
                    android:layout_height="23dp"
                    android:elevation="3dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/enemy2Hp"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

            </FrameLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="56dp"/>

            <FrameLayout
                android:layout_width="375dp"
                android:layout_height="185dp"
                android:background="@drawable/buttons_background"
                android:backgroundTint="#73E0E0E0"
                android:padding="10dp">

                <TextView
                    android:id="@+id/fightLog"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/fightLogText"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </FrameLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="66dp"/>

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:background="@drawable/rounded_rectangle"
                android:backgroundTint="#99595959"
                android:padding="7dp">

                <Button
                    android:id="@+id/button"
                    android:layout_width="195dp"
                    android:layout_height="85dp"
                    android:backgroundTint="#F60000"
                    android:padding="15dp"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:text="Attack"
                    android:textAllCaps="false"
                    android:textColor="#FFC000"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:cornerRadius="25dp"
                    app:layout_column="0"
                    app:layout_row="0" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="195dp"
                    android:layout_height="85dp"
                    android:backgroundTint="#00E604"
                    android:padding="15dp"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:text="Dodge"
                    android:textAllCaps="false"
                    android:textColor="#B300FF"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:cornerRadius="25dp"
                    app:layout_column="1"
                    app:layout_row="1" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="195dp"
                    android:layout_height="85dp"
                    android:backgroundTint="#FFC003"
                    android:padding="15dp"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:text="Counter"
                    android:textAllCaps="false"
                    android:textColor="#007BFF"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:cornerRadius="25dp"
                    app:layout_column="0"
                    app:layout_row="1" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="195dp"
                    android:layout_height="85dp"
                    android:backgroundTint="#008EFF"
                    android:padding="15dp"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:text="Defend"
                    android:textAllCaps="false"
                    android:textColor="#FF0800"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:cornerRadius="25dp"
                    app:layout_column="1"
                    app:layout_row="0" />
            </androidx.gridlayout.widget.GridLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="24dp"/>

            <Button
                android:id="@+id/restartButton"
                android:layout_width="115dp"
                android:layout_height="55dp"
                android:backgroundTint="#00E60A"
                android:text="Restart"
                android:textColor="#FF0B07"
                android:textSize="15sp"
                android:textStyle="bold"
                app:cornerRadius="20dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>